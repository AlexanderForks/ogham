<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/DECORATION/1.3.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/DECORATION/1.3.0 http://maven.apache.org/xsd/decoration-1.3.0.xsd">
	<skin>
		<groupId>lt.velykis.maven.skins</groupId>
		<artifactId>reflow-maven-skin</artifactId>
		<version>1.1.1</version>
	</skin>
	<custom>
		<reflowSkin>
			<protocolRelativeURLs>false</protocolRelativeURLs>
			<theme>bootswatch-spacelab</theme>
			<highlightJs>true</highlightJs>
			<brand>
				<name>Ogham</name>
				<href>http://github.com/groupe-sii/ogham</href>
			</brand>
			<slogan>Open, General and Highly Adaptative Messaging library. It is
				a reusable
				Java library for sending any kind of message (email, SMS,
				mobile
				notification,
				tweet, SNMP...). The content of the message can
				comes from any
				templating engine (Thymeleaf, Freemarker, Velocity,
				...). It also
				provides bridges for framework integration (Spring,
				JSF, ...). It
				is designed to be easily extended.</slogan>
			<titleTemplate>%2$s | %1$s</titleTemplate>
			<toc>top</toc>
			<topNav>Download|reports</topNav>
			<bottomNav>
				<column>Main|Download</column>
				<column>Documentation</column>
				<column>reports|modules</column>
			</bottomNav>
			<bottomDescription>
				This is a very good project doing interesting and
				valuable things.
			</bottomDescription>
			<pages>
				<index project="ogham">
					<shortTitle>Welcome</shortTitle>
					<breadcrumbs>false</breadcrumbs>
					<toc>top</toc>
					<tocTopMax>6</tocTopMax>
					<sections>
						<carousel />
						<body />
						<sidebar />
						<thumbs>2</thumbs>
						<columns>3</columns>
					</sections>
				</index>
				<developer-info>
					<toc>sidebar</toc>
				</developer-info>
				<!-- Disable ToC for some Maven reports -->
				<project-info>
					<toc>false</toc>
				</project-info>
				<github-report>
					<toc>false</toc>
				</github-report>
				<dependencies>
					<tocTopMax>4</tocTopMax>
				</dependencies>
			</pages>
		</reflowSkin>
	</custom>

